%html
  %head
    %title Smart Fridge
    
    /Stylesheets
    %link{:rel => "stylesheet", :href => "css/reset.css"}
    %link{:rel => "stylesheet", :href => "css/text.css"}
    %link{:rel => "stylesheet", :href => "css/960_24_col.css"}        
    -# %link{:rel => "stylesheet", :href => "css/ui-lightness/jquery-ui-1.8.9.custom.css"}
    %link{:rel => "stylesheet", :href => "css/jquery.jscrollpane.css"}
    %link{:rel => "stylesheet", :href => "css/layout.css"}
    
    /Javascripts
    %script{:type => 'text/javascript', :src => 'js/jquery-1.7.1.min.js'}
    %script{:type => 'text/javascript', :src => 'js/jquery-ui-1.8.18.custom.min.js'}
    %script{:type => 'text/javascript', :src => 'js/jquery.ba-outside-events.min.js'}
    %script{:type => 'text/javascript', :src => 'js/jquery.carouFredSel-5.5.0-packed.js'}
    %script{:type => 'text/javascript', :src => 'js/jquery.easing.1.3.js'}      
    %script{:type => 'text/javascript', :src => 'js/jquery.mousewheel.js'}
    %script{:type => 'text/javascript', :src => 'js/jquery.jscrollpane.min.js'}            
    %script{:type => 'text/javascript', :src => 'js/dragdrop.js'}
  %body
    #main-bare.container_24
      .spacer_top.grid_24

      /TOP SHELF
      .top_shelf.grid_24
      .spacer_top.grid_24
      
      /MID SHELF
      .grid_24
        .mid_shelf.grid_2.alpha
          #alert_button
          #list_button
        /STAPLE SECTION  
        #staple.mid_shelf.grid_22.omega
          #staple_prev.prev 
          #staple_next.next 
          %ul#staple_list
            - (0..3).each do 
              %li
                %img{:src => "img/1.jpeg", :width => "110", :height => "110"}
              %li
                %img{:src => "img/2.png", :width => "110", :height => "110"}

      .spacer_bottom.grid_24
                
      /BOTTOM SHELF
      .grid_24
        /ITEMS
        .grid_17.push_2.alpha
          %ul#storage
            - (0..9).each do 
              %li
                %a{:onclick => "addStaple()"}
                  %img{:src => "img/1.jpeg", :width => "90", :height => "90"}
              %li
                %img{:src => "img/2.png", :width => "90", :height => "90"}


        /MENU
        .bottom_shelf.grid_5.push_2.omega
          #menu
            %input#search{:value => "search", :size => "24"}
          #add_button
          #list
          #trash
               
      .spacer.grid_24              
    
    #hidden_dialog.hide
      test test!  
